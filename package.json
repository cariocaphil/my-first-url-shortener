{
  "name": "mini-url-shortener",
  "version": "0.0.1",
  "description": "a mini url shortener",
  "main": "server.js",
  "scripts": {
    "start": "tsc && node dist/src/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "build": "tsc --project ./",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix"
  },
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.13.8"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.4.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
